{
  "name": "SoundWave - Progressive Music Player",
  "short_name": "SoundWave",
  "description": "A comprehensive audio player supporting local files and Google Drive integration with offline capability",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#121212",
  "theme_color": "#9C4F2C",
  "orientation": "any",
  "dir": "ltr",
  "lang": "en-US",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "categories": ["music", "entertainment", "multimedia"],
  "screenshots": [
    {
      "src": "data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTI4MCIgaGVpZ2h0PSI3MjAiIHZpZXdCb3g9IjAgMCAxMjgwIDcyMCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHJlY3Qgd2lkdGg9IjEyODAiIGhlaWdodD0iNzIwIiBmaWxsPSIjMTIxMjEyIi8+CjwvcmVnPg==",
      "sizes": "1280x720",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "SoundWave main interface"
    }
  ],
  "shortcuts": [
    {
      "name": "Upload Music",
      "short_name": "Upload",
      "url": "/?action=upload",
      "description": "Upload local music files",
      "icons": [{"src": "data:image/svg+xml;base64,", "sizes": "96x96"}]
    },
    {
      "name": "Connect Google Drive",
      "short_name": "Drive",
      "url": "/?action=google-drive",
      "description": "Connect to Google Drive",
      "icons": [{"src": "data:image/svg+xml;base64,", "sizes": "96x96"}]
    },
    {
      "name": "Recently Played",
      "short_name": "Recent",
      "url": "/recent",
      "description": "View recently played tracks",
      "icons": [{"src": "data:image/svg+xml;base64,", "sizes": "96x96"}]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+soundwave",
      "url": "/?track=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*", ".mp3", ".wav", ".flac", ".m4a", ".ogg"]
        }
      ]
    }
  },
  "related_applications": [],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "audio/mp3": [".mp3"],
        "audio/mpeg": [".mp3"],
        "audio/wav": [".wav"],
        "audio/flac": [".flac"],
        "audio/m4a": [".m4a"],
        "audio/ogg": [".ogg"],
        "audio/*": ["*"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": ["auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "permissions_policy": {
    "autoplay": ["self"],
    "camera": [],
    "microphone": [],
    "geolocation": []
  }
}
